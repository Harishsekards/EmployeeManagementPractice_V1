@model IEnumerable<Employee>
@{
    ViewBag.Title = "Employees";
}
<h3>Employees List</h3>
<div class="card-deck">

    @foreach (var employee in Model)
    {
        var PhotoPath = "~/images/" + (employee.PhotoPath ?? "noimage.jpg");
        <div class="card m-3" style="min-width:18rem;max-width:30.5%;">
            <div class="card-header">
                <h3>@employee.EmployeeName</h3>
            </div>
            <img class="card-img-top" src=@PhotoPath asp-append-version="true" />
            <div class="card-footer text-lg-center">
                <a asp-controller="home" asp-action="details" asp-route-id="@employee.EmployeeId" class="btn btn-primary m-1">View</a>
                <a asp-controller="home" asp-action="edit" asp-route-id="@employee.EmployeeId" class="btn btn-primary m-1">Edit</a>
                <a href="#" class="btn btn-danger m-1">Delete</a>
            </div>
        </div>
    }

</div>